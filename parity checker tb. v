module tb_parity_check;
    reg [3:0] data;
    reg parity;
    wire error;

    parity_check uut (.data(data), .parity(parity), .error(error));

    initial begin
        $monitor("Time=%0t data=%b parity=%b error=%b", $time, data, parity, error);
        data = 4'b1010; parity = 0; #10;
        data = 4'b1010; parity = 1; #10;
        data = 4'b1111; parity = 0; #10;
        $finish;
    end
endmodule