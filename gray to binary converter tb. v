module tb_gray_to_binary;
    reg [3:0] gray;
    wire [3:0] binary;

    gray_to_binary uut(gray, binary);

    initial begin
        $dumpfile("gray_to_binary.vcd"); $dumpvars(0, tb_gray_to_binary);
        gray = 4'b0000; #10;
        gray = 4'b0100; #10;
        gray = 4'b1100; #10;
        gray = 4'b1111; #10;
        $finish;
    end
endmodule